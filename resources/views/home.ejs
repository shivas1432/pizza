<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Best Pizza in Town</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@100;300;400;700;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/app.css">
</head>
<body class="bg-gray-100 font-lato">

    <!-- Navigation -->
    <nav class="container mx-auto flex items-center justify-between py-4">
        <div>
            <img src="/img/logo (2).png" alt="Pizza-Logo" class="h-12">
        </div>
        <ul class="flex items-center space-x-6">
            <li><a href="#" class="text-gray-700 hover:text-red-500">Menu</a></li>
            <li><a href="#" class="text-gray-700 hover:text-red-500">Offers</a></li>
            <li><a href="/register" class="text-gray-700 hover:text-red-500">Register</a></li>
            <li><a href="/login" class="text-gray-700 hover:text-red-500">Login</a></li>
            <li><a href="/cart"><img src="/img/cart.png" alt="Cart" class="h-6"></a></li>
        </ul>
    </nav>

    <!-- Hero Section -->
    <section class="bg-hero-pattern bg-cover bg-center h-screen flex items-center justify-center">
        <div class="text-center">
            <h1 class="text-lg font-bold text-white mb-4">Welcome to <%= title %></h1>
            <p class="text-xl text-white mb-6">Serving the best pizza in town since <%= year %>.</p>
            <a href="/menu" class="bg-yellow-500 text-white py-3 px-8 rounded-lg hover:bg-yellow-600 text-xl">Order Now</a>
        </div>
    </section>

    <!-- Featured Pizzas -->
    <section class="py-2">
        <div class="container mx-auto text-center">
            <h2 class="text-3xl font-bold text-gray-800 mb-8">Our Featured Pizzas</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <% pizzas.forEach(pizza => { %>
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <img src="<%= pizza.image %>" alt="<%= pizza.name %>" class="w-full h-64 object-cover rounded-lg mb-4">
                        <h3 class="text-5xl font-bold text-gray-800 mb-2"><%= pizza.name %></h3>
                        <p class="text-gray-600 mb-4"><%= pizza.description %></p>
                        <p class="text-red-500 font-bold text-lg">$<%= pizza.price %></p>
                        <div class="mt-4 flex justify-between items-center">
                            <form action="/add-to-cart" method="POST">
                                <input type="hidden" name="pizzaId" value="<%= pizza.id %>">
                                <button type="submit" class="bg-yellow-500 text-white py-2 px-4 rounded-lg hover:bg-yellow-600 hover:shadow-lg transition duration-300 ease-in-out">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Additional Sections -->
    <section class="hero1">
        <div class="container mx-auto flex items-center justify-center">
            <div class="w-1/2">
                <h5 class="text-lg"><em>Are you hungry?</em></h5>
                <h1 class="text-6xl font-bold">Don't wait!</h1>
            </div>
            <div>
                <img src="/img/heropizza.jpg" alt="hero-pizza">
            </div>
        </div>
    </section>

    <section class="menu container mx-auto py-8">
        <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
        <div>
            <div>
                <img src="/img/pizza.png" alt="pizza">
                <div><h2>Margherita</h2></div>
                <button class="bg-yellow-500 text-white py-2 px-4 rounded-lg hover:bg-yellow-600">Order Now</button>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-red-600 text-white p-4 mt-12">
        <div class="container mx-auto text-center">
            <p>&copy; <%= new Date().getFullYear() %> <%= title %>. All rights reserved.</p>
            <p class="mt-2">Follow us on <a href="#" class="underline">Instagram</a> and <a href="#" class="underline">Facebook</a></p>
        </div>
    </footer>

    <script src="/js/app.js"></script>
</body>
</html>
